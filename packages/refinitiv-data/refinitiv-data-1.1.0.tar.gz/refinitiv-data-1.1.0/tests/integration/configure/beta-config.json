{
    "sessions": {
        "platform": {
            "my-session": {
                "app-key": "${PPE_DESKTOP_APP_KEY}",
                "username": "${PPE_USERNAME}",
                "password": "${PPE_PASSWORD}",
                "auto-reconnect": true,
                "server-mode": false,
                "base-url": "https://api.ppe.refinitiv.com",
                "auth": {
                    "url": "/auth/oauth2/v1",
                    "authorize": "/authorize",
                    "token": "/token"
                }
            }
        },
        "desktop": {
            "my-session": {
                "app-key": "${PPE_DESKTOP_APP_KEY}",
                "base-url": "http://localhost:9000",
                "platform-paths": {
                    "rdp": "/api/rdp",
                    "udf": "/api/udf"
                },
                "handshake-url": "/api/handshake"
            }
        }
    }
}
