{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "definitions": {
    "idleZCurrentRange": {
      "type": "number",
      "minimum": 0.01,
      "maximum": 1.0
    },
    "activeZCurrentRange": {
      "type": "number",
      "minimum": 0.02,
      "maximum": 2.0
    },
    "jawReferenceVoltageRange": {
      "type": "number",
      "minimum": 0.01,
      "maximum": 3.3
    },
    "percentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "coordinates": {
      "type": "object",
      "additionalProperties": false,
      "required": ["x", "y", "z"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      }
    },
    "positiveNumber": {
      "type": "number",
      "minimum": 0
    },
    "jawWidthValue": {
      "type": "object",
      "required": ["min", "max"],
      "properties": {
        "min": { "$ref": "#/definitions/positiveNumber" },
        "max": { "$ref": "#/definitions/positiveNumber" }
      }
    }
  },

  "description": "Gripper specification",
  "type": "object",
  "required": [
    "$otSharedSchema",
    "displayName",
    "model",
    "idleZCurrent",
    "activeZCurrent",
    "jawReferenceVoltage",
    "jawForcePerDutyCycle",
    "baseOffsetFromMount",
    "jawCenterOffsetFromBase",
    "pinOneOffsetFromBase",
    "pinTwoOffsetFromBase",
    "quirks",
    "jawSizes_um"
  ],
  "additionalProperties": false,
  "properties": {
    "$otSharedSchema": {
      "type": "string",
      "description": "The path to a valid Opentrons shared schema relative to the shared-data directory, without its extension. For instance, #/gripper/schemas/1 is a reference to this schema."
    },
    "displayName": { "type": "string" },
    "model": {
      "type": "string",
      "pattern": "^gripperV[0-9]$"
    },
    "idleZCurrent": {
      "type": "object",
      "value": { "$ref": "#/definitions/idleZCurrentRange" }
    },
    "activeZCurrent": {
      "type": "object",
      "value": { "$ref": "#/definitions/activeZCurrentRange" }
    },
    "jawReferenceVoltage": {
      "type": "object",
      "value": { "$ref": "#/definitions/jawReferenceVoltageRange" }
    },
    "jawForcePerDutyCycle": {
      "type": "array",
      "items": {
        "type": "array",
        "items": [{ "type": "number" }, { "$ref": "#/definitions/percentage" }],
        "minItems": 2,
        "maxItems": 2
      }
    },
    "baseOffsetFromMount": { "$ref": "#/definitions/coordinates" },
    "jawCenterOffsetFromBase": { "$ref": "#/definitions/coordinates" },
    "pinOneOffsetFromBase": { "$ref": "#/definitions/coordinates" },
    "pinTwoOffsetFromBase": { "$ref": "#/definitions/coordinates" },
    "quirks": {
      "type": "array",
      "description": "Array of valid quirks for a given gripper",
      "items": { "type": "string" }
    },
    "jawSizes_mm": {
      "$ref": "#/definitions/configValue"
    }
  }
}
