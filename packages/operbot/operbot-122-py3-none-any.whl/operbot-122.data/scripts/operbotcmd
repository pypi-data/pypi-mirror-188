"write your own commands"


import inspect
import os
import sys


from opr.handler import Command, Handler
from opr.objects import Wd
from opr.runtime import Cfg, command, parse
from opr.scanner import scan


from operbot import cmd, irc, rss


import operbot


Cfg.name = "operbot"
Wd.workdir = "/var/lib/operbot/"


class CLI(Handler):

    @staticmethod
    def raw(txt):
        print(txt)
        sys.stdout.flush()


def mod(event):
    path = operbot.__path__[0]
    event.reply(",".join([x[:-3] for x in os.listdir(path) if not (x.startswith("_") or x.endswith("~"))]))


def main():
    Command.add(mod)
    parse(' '.join(sys.argv[1:]))
    scan(cmd)
    scan(irc)
    scan(rss)
    cli = CLI()
    command(Cfg.prs.otxt, cli)
    

main()
